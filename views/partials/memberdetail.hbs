{{#each memberAssessments}}
<section class="ui segment">
    <div class="ui three small statistics">
        <div class="ui statistic">
            <div class="value">
                <i class="user icon"> </i>
            </div>
            <div class="label">
                <h2 class="ui header">{{firstname}} {{lastName}}  </h2>
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                <i class="heartbeat icon"> </i>
            </div>
            <div class="label">
                <h2 class="ui header"> BMI: {{bmi}} </h2>
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                <i class="user icon"> </i>
            </div>
            <div class="label">
                <h2 class="ui header"> Moderatly Obese </h2>
            </div>
        </div>
    </div>
</section>
{{/each}}